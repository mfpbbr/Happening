<div class="row">
  <aside class="span4">
    <section>
      <h3><%= @user.username %></h3>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'users/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>

